{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmUserName": {
      "type": "string",
      "metadata": {
        "description": "Username for the Virtual Machine"
      },
      "defaultValue": "testuser"
    },
    "ExistingNetworkResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "Resource Group for the VNET where the VM will be placed"
      }
    },
    "vnetName": {
      "defaultValue": "vnet",
      "type": "string"
    },
    "subnetName": {
      "defaultValue": "subnet",
      "type": "string"
    },
    "osType": {
      "type": "string",
      "allowedValues": [
        "SLES 12 SP3",
        "SLES 12 SP3 BYOS",
        "SLES 12 SP2",
        "SLES 12 SP2 BYOS"
      ],
      "defaultValue": "SLES 12 SP3",
      "metadata": {
        "description": "The type of the operating system you want to deploy."
      }
    },
    "vmPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for the Virtual Machine"
      }
    },
    "customUri": {
      "type": "string",
      "metadata": {
        "description": "Uri for SAP Bits"
      }
    },
    "StaticIP": {
      "type": "string",
      "metadata": {
        "description": "static ip address for the virtual machine"
      }
    },
    "sapid": {
      "type": "string",
      "metadata": {
        "description": "SAP username for download center"
      }
    },
    "sappasswd": {
      "type": "string",
      "metadata": {
        "description": "SAP passwod for download center"
      }
    },
    "downloadbitsfrom": {
      "type": "string",
      "allowedValues": ["SAP", "CUSTOMURI"],
      "defaultValue": "SAP",
      "metadata": {
        "description": "Where to download the SAP bits from"
      }
    },
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "The base URI where artifacts required by this template are located. When the template is deployed using the accompanying scripts, a private location in the subscription will be used and this value will be automatically generated."
      },
      "defaultValue": "https://raw.githubusercontent.com/bqtrinh/AzQ/master"
    },
    "_artifactsLocationSasToken": {
      "type": "securestring",
      "metadata": {
        "description": "The sasToken required to access _artifactsLocation.  When the template is deployed using the accompanying scripts, a sasToken will be automatically generated."
      },
      "defaultValue": ""
    },
    "vmName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Virtual Machine"
      },
      "defaultValue": "linuxjumpbox"
    },
    "SAPSOFTWARETODOWNLOAD": {
      "type": "string",
      "metadata": {
        "description": "Which SAP software to download"
      },
      "defaultValue": "NONE",
      "allowedValues": ["S4 1709", "IDES 1610", "NONE"]
    }
  },
  "variables": {
    "vnetID": "[resourceId(parameters('ExistingNetworkResourceGroup'),'Microsoft.Network/virtualNetworks',parameters('vnetName'))]",
    "subnetRef": "[concat(variables('vnetID'), '/subnets/',parameters('subnetName'))]",
    "vmName": "[parameters('vmName')]",
    "vNicName": "[concat(parameters('vmName'),'nic')]",
    "vhdStorageAccountName": "[uniqueString(resourceGroup().id, 'storage')]",
    "images": {
      "SLES 12 SP3": {
        "sku": "12-SP3",
        "offer": "SLES-SAP",
        "publisher": "SUSE",
        "version": "latest",
        "OSType": "Linux"
      },
      "SLES 12 SP3BYOS": {
        "sku": "12-SP3",
        "offer": "SLES-SAP-BYOS",
        "publisher": "SUSE",
        "OSType": "Linux",
        "version": "latest"
      },
      "SLES 12 SP2": {
        "sku": "12-SP2",
        "offer": "SLES-SAP",
        "publisher": "SUSE",
        "version": "latest",
        "OSType": "Linux"
      },
      "SLES 12 SP2 BYOS": {
        "sku": "12-SP2",
        "offer": "SLES-SAP-BYOS",
        "publisher": "SUSE",
        "OSType": "Linux",
        "version": "latest"
      }
    },
    "internalOSType": "[variables('images')[parameters('osType')].OSType]",
    "csExtension": {
      "Linux": {
        "script": "[concat(parameters('_artifactsLocation'), '/sap-ntp-server/ntpserver.sh', parameters('_artifactsLocationSasToken'))]",
        "scriptCall": "sh ntpserver.sh"
      }
    },
    "csExtensionScriptsaved": {
      "value": "[variables('csExtension')[variables('internalOSType')].script]"
    },
    "csExtensionscriptCallsaved": {
      "value": "[variables('csExtension')[variables('internalOSType')].scriptCall]"
    },
    "csExtensionScript": "[concat(parameters('_artifactsLocation'), '/tests/sapbits-svr/sapbits.sh', parameters('_artifactsLocationSasToken'))]",
    "csExtensionscriptCall": "sh ntpserver.sh"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('vmName'),'/', 'CustomScript')]",
      "apiVersion": "2017-12-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": [
            "https://raw.githubusercontent.com/bqtrinh/AzQ/masterlinuxjumpbox/linuxjumpbox-inst.sh"
          ],
          "commandToExecute": "[concat('bash linuxjumpbox-inst.sh \"',parameters('customURI'),'\" \"',parameters('sapid'),'\" \"',parameters('sappasswd'),'\" \"' ,parameters('downloadbitsfrom'),'\" \"' ,parameters('SAPSOFTWARETODOWNLOAD'),'\"')]"
        }
      }
    }
  ],
  "outputs": {}
}
